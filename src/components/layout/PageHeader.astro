---
import H1 from "../typography/H1.astro";

type Props = {
  title: string
}

// Astro Props
const { title } = Astro.props
---

<div>
    <div class="container px-6 mx-auto text-center">
        <H1>{title}</H1>

        <div class="flex justify-center mx-auto mt-1">
            <span class="inline-block w-40 h-1 bg-emerald-400 rounded-full"></span>
            <span class="inline-block w-3 h-1 mx-1 bg-emerald-500 rounded-full"></span>
            <span class="inline-block w-1 h-1 bg-emerald-600 rounded-full"></span>
        </div>
    </div>
</div>